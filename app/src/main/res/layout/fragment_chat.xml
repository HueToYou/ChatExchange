<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/show_chats_fab"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="toggleChatsSlide"
            android:tint="#fff"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_chat_black_24dp"
            app:useCompatPadding="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/close_chat_frag"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tint="#fff"
            android:onClick="confirmClose"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_close_black_24dp"
            app:useCompatPadding="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/show_chats_fab"
            android:layout_toEndOf="@+id/show_chats_fab" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/star_fab"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/room_info_fab"
            android:layout_toStartOf="@+id/room_info_fab"
            android:clickable="true"
            android:tint="#fff"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_star_black_24dp"
            app:useCompatPadding="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/room_info_fab"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/open_in_browser_fab"
            android:layout_toStartOf="@+id/open_in_browser_fab"
            android:clickable="true"
            android:tint="#fff"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_info_outline_black_24dp"
            app:useCompatPadding="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/open_in_browser_fab"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/show_users_fab"
            android:layout_toStartOf="@+id/show_users_fab"
            android:clickable="true"
            android:tint="#fff"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_open_in_browser_black_24dp"
            app:useCompatPadding="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/show_users_fab"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:tint="#fff"
            app:elevation="4dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_supervisor_account_black_24dp"
            app:useCompatPadding="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/chat_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>