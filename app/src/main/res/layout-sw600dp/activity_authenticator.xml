<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/colorPrimaryLight"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical|center_horizontal"
    android:nextFocusDown="@id/auth_main"
    android:nextFocusForward="@id/auth_main"
    android:orientation="vertical"
    tools:context="com.huetoyou.chatexchange.auth.AuthenticatorActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableStart="@mipmap/ic_launcher"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_authenticator_description" />

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_vertical_margin" />

        <EditText
            android:id="@+id/auth_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_authenticator_email"
            android:inputType="text|textEmailAddress" />

        <EditText
            android:id="@+id/auth_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/activity_authenticator_password"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/show_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_authenticator_show_password" />

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/auth_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/activity_authenticator_submit"
            android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>
